    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ведите данные"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_for_name" />
        <EditText
            android:id="@+id/input_soname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_for_soname" />
        <EditText
            android:id="@+id/input_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_for_age" />
    </LinearLayout>
    <Button
        android:id="@+id/button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_for_button"
        android:textSize="20dp"
        android:textColor="#337700"
        android:layout_gravity="bottom"
        android:gravity="bottom"/>

